{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "blaze-commerce/service-features",
  "version": "0.1.0",
  "title": "Service Features",
  "category": "widgets",
  "icon": "admin-generic",
  "description": "Display service features with logo, text, and trigger",
  "supports": {
    "html": false
  },
  "attributes": {
    "align": {
      "type": "string",
      "default": "left"
    },
    "itemsDirection": {
      "type": "string",
      "default": "horizontal"
    },
    "textColor": {
      "type": "string",
      "default": "#333333"
    },
    "textSize": {
      "type": "number",
      "default": 16
    },
    "textTransform": {
      "type": "string",
      "default": "none"
    },
    "textFontWeight": {
      "type": "string",
      "default": "normal"
    },
    "textLineHeight": {
      "type": "number",
      "default": 1.5
    },
    "showDivider": {
      "type": "boolean",
      "default": false
    },
    "dividerColor": {
      "type": "string",
      "default": "#e0e0e0"
    },
    "triggerColor": {
      "type": "string",
      "default": "#0066cc"
    },
    "triggerSize": {
      "type": "number",
      "default": 14
    },
    "logoSize": {
      "type": "number",
      "default": 60
    },
    "spacing": {
      "type": "number",
      "default": 20
    },
    "items": {
      "type": "array",
      "default": [
        {
          "id": "item-1",
          "logo": {
            "id": "",
            "url": "",
            "alt": ""
          },
          "text": "Service Feature",
          "triggerType": "link",
          "triggerText": "Learn More",
          "triggerLink": "#",
          "triggerTarget": "",
          "triggerRichText": ""
        }
      ]
    }
  },
  "textdomain": "blaze-commerce",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}